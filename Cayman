    <script>
        let inventory = JSON.parse(localStorage.getItem('idcTagInventory')) || [];
        let printQueue = [];
        let firstVisit = !localStorage.getItem('idcPrinterConfigured');

        document.addEventListener('DOMContentLoaded', () => {
            generateCodes();
            calculatePrice();
            updateInventoryDisplay();
            updateStonePreview();
            
            // Show setup on first visit
            if (firstVisit) {
                setTimeout(() => {
                    document.getElementById('setupWizard').style.display = 'flex';
                }, 500);
            }

            // Printer status click
            document.getElementById('printerStatus').addEventListener('click', () => {
                document.getElementById('setupWizard').style.display = 'flex';
            });
        });

        function closeSetup() {
            document.getElementById('setupWizard').style.display = 'none';
            localStorage.setItem('idcPrinterConfigured', 'true');
            document.getElementById('printerStatus').className = 'printer-status printer-ready';
            document.getElementById('printerStatus').innerHTML = '<span>‚úì</span><span>Printer Ready</span>';
        }

        function printTestTag() {
            const testData = {
                itemCode: 'TEST001',
                serialCode: 'TEST1234',
                locationCode: 'SETUP',
                metalType: '14K',
                stones: ['DIA 0.50ct'],
                price: '$999'
            };
            
            document.getElementById('printContainer').innerHTML = generatePrintHTML(testData);
            setTimeout(() => {
                window.print();
                closeSetup();
            }, 100);
        }

        function switchTab(tab) {
            ['create', 'inventory', 'print'].forEach(t => {
                document.getElementById(`view-${t}`).classList.add('hidden');
                document.getElementById(`tab-${t}`).classList.remove('bg-yellow-500', 'text-red-900');
                document.getElementById(`tab-${t}`).classList.add('bg-red-800', 'text-red-200', 'border', 'border-red-700');
            });
            document.getElementById(`view-${tab}`).classList.remove('hidden');
            document.getElementById(`tab-${tab}`).classList.remove('bg-red-800', 'text-red-200', 'border', 'border-red-700');
            document.getElementById(`tab-${tab}`).classList.add('bg-yellow-500', 'text-red-900');
            
            if (tab === 'inventory') updateInventoryDisplay();
            if (tab === 'print') updatePrintQueue();
        }

        function addStone() {
            const container = document.getElementById('stoneContainer');
            const entry = document.createElement('div');
            entry.className = 'stone-entry';
            entry.innerHTML = `
                <select class="stone-type bg-red-950/80 border border-red-600 rounded-lg px-3 py-2 text-sm text-white custom-select input-glow w-32">
                    <option value="DIA">DIA</option>
                    <option value="W-DIA">W-DIA</option>
                    <option value="B-DIA">B-DIA</option>
                    <option value="P-DIA">P-DIA</option>
                    <option value="Y-DIA">Y-DIA</option>
                    <option value="TAZ">TAZ</option>
                    <option value="SAP">SAP</option>
                    <option value="EM">EM</option>
                    <option value="RUBY">RUBY</option>
                    <option value="TOP">TOP</option>
                    <option value="LARI">LARI</option>
                    <option value="PERL">PERL</option>
                    <option value="OPAL">OPAL</option>
                    <option value="GAR">GAR</option>
                    <option value="AM">AM</option>
                    <option value="CIT">CIT</option>
                    <option value="AQ">AQ</option>
                    <option value="MOON">MOON</option>
                    <option value="ONYX">ONYX</option>
                    <option value="JADE">JADE</option>
                </select>
                <input type="text" class="stone-weight bg-red-950/80 border border-red-600 rounded-lg px-3 py-2 text-sm text-white input-glow flex-1" placeholder="1.2ct">
                <button onclick="removeStone(this)" class="text-red-400 hover:text-red-300 px-2">√ó</button>
            `;
            container.appendChild(entry);
            
            entry.querySelector('.stone-type').addEventListener('change', updateStonePreview);
            entry.querySelector('.stone-weight').addEventListener('input', updateStonePreview);
        }

        function removeStone(btn) {
            const entries = document.querySelectorAll('.stone-entry');
            if (entries.length > 1) {
                btn.closest('.stone-entry').remove();
                updateStonePreview();
            }
        }

        function getStones() {
            const entries = document.querySelectorAll('.stone-entry');
            const stones = [];
            entries.forEach(entry => {
                const type = entry.querySelector('.stone-type').value;
                const weight = entry.querySelector('.stone-weight').value.trim();
                if (weight) {
                    stones.push(`${type} ${weight}`);
                }
            });
            return stones;
        }

        function updateStonePreview() {
            const stones = getStones();
            const container = document.getElementById('previewStones');
            
            if (stones.length === 0) {
                container.innerHTML = '<p class="right-stone-line">No stones</p>';
            } else {
                container.innerHTML = stones.map(s => `<p class="right-stone-line">${s}</p>`).join('');
            }
        }

        function generateCodes() {
            const prod = document.getElementById('productType').value.substring(0, 2).toUpperCase();
            const random = Math.floor(Math.random() * 900) + 100;
            const itemCode = `${prod}${random}`;
            const serial = Math.random().toString(36).substring(2, 10).toUpperCase();
            const location = `ETH${Math.floor(Math.random() * 900) + 100}`;
            
            document.getElementById('itemCode').value = itemCode;
            document.getElementById('serialCode').value = serial;
            document.getElementById('locationCode').value = location;
            
            updatePreview();
        }

        function updatePreview() {
            const itemCode = document.getElementById('itemCode').value || 'ER235';
            const serial = document.getElementById('serialCode').value || '128154WY';
            const location = document.getElementById('locationCode').value || 'ETH151';
            const metal = document.getElementById('metalType').value;
            const price = document.getElementById('finalPrice').value;
            
            document.getElementById('previewItemCode').textContent = itemCode;
            document.getElementById('previewSerial').textContent = serial;
            document.getElementById('previewLocation').textContent = location;
            document.getElementById('previewMetal').textContent = metal;
            document.getElementById('previewPrice').textContent = price;
            
            updateStonePreview();
            
            const qrcodeDiv = document.getElementById('qrcode');
            qrcodeDiv.innerHTML = '';
            new QRCode(qrcodeDiv, {
                text: `${itemCode}-${serial}`,
                width: 90,
                height: 90,
                colorDark: "#000000",
                colorLight: "#ffffff",
                correctLevel: QRCode.CorrectLevel.M
            });
        }

        function calculatePrice() {
            const cost = parseFloat(document.getElementById('cost').value) || 0;
            const multiplier = parseInt(document.getElementById('multiplier').value) || 15;
            const price = Math.round(cost * multiplier);
            document.getElementById('finalPrice').value = '$' + price.toLocaleString();
            updatePreview();
        }

        function saveToInventory() {
            const data = {
                itemCode: document.getElementById('itemCode').value,
                serialCode: document.getElementById('serialCode').value,
                locationCode: document.getElementById('locationCode').value,
                metalType: document.getElementById('metalType').value,
                productType: document.getElementById('productType').value,
                stones: getStones(),
                cost: document.getElementById('cost').value,
                price: document.getElementById('finalPrice').value,
                createdAt: new Date().toISOString()
            };
            
            const existing = inventory.findIndex(i => i.itemCode === data.itemCode);
            if (existing >= 0) inventory[existing] = data;
            else inventory.push(data);
            
            localStorage.setItem('idcTagInventory', JSON.stringify(inventory));
            updateInventoryCount();
            showNotification('Saved');
            generateCodes();
        }

        function updateInventoryDisplay() {
            const container = document.getElementById('inventoryList');
            document.getElementById('inventoryCount').textContent = inventory.length;
            
            if (inventory.length === 0) {
                container.innerHTML = '<div class="col-span-full text-center py-12 text-red-300">No items</div>';
                return;
            }
            
            container.innerHTML = inventory.map(item => `
                <div class="bg-red-950/50 border border-red-700 rounded-lg p-3 inventory-item" data-code="${item.itemCode.toLowerCase()}">
                    <div class="flex justify-between items-start mb-1">
                        <div>
                            <p class="font-bold text-white text-sm">${item.itemCode}</p>
                            <p class="text-xs text-red-200">${item.metalType} ‚Ä¢ ${item.stones.join(', ')}</p>
                        </div>
                        <p class="text-yellow-400 font-bold">${item.price}</p>
                    </div>
                    <div class="flex gap-2 mt-2">
                        <button onclick="loadItem('${item.itemCode}')" class="flex-1 bg-red-800 hover:bg-red-700 text-xs py-1.5 rounded">Edit</button>
                        <button onclick="addToQueue('${item.itemCode}')" class="flex-1 bg-yellow-600/20 text-yellow-400 text-xs py-1.5 rounded">+ Queue</button>
                        <button onclick="deleteItem('${item.itemCode}')" class="px-2 bg-red-500/10 text-red-400 rounded"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg></button>
                    </div>
                </div>
            `).join('');
        }

        function searchInventory(e) {
            if (e.key !== 'Enter') return;
            const query = document.getElementById('searchBarcode').value.toLowerCase();
            document.querySelectorAll('.inventory-item').forEach(item => {
                const code = item.getAttribute('data-code');
                item.style.display = code.includes(query) ? 'block' : 'none';
            });
        }

        function clearSearch() {
            document.getElementById('searchBarcode').value = '';
            updateInventoryDisplay();
        }

        function loadItem(code) {
            const item = inventory.find(i => i.itemCode === code);
            if (!item) return;
            
            document.getElementById('itemCode').value = item.itemCode;
            document.getElementById('serialCode').value = item.serialCode;
            document.getElementById('locationCode').value = item.locationCode;
            document.getElementById('metalType').value = item.metalType;
            document.getElementById('productType').value = item.productType;
            document.getElementById('cost').value = item.cost;
            
            document.getElementById('stoneContainer').innerHTML = '';
            if (item.stones && item.stones.length > 0) {
                item.stones.forEach((stone, idx) => {
                    const parts = stone.split(' ');
                    const type = parts[0];
                    const weight = parts.slice(1).join(' ');
                    
                    if (idx === 0) {
                        const firstEntry = document.querySelector('.stone-entry');
                        firstEntry.querySelector('.stone-type').value = type;
                        firstEntry.querySelector('.stone-weight').value = weight;
                    } else {
                        addStone();
                        const entries = document.querySelectorAll('.stone-entry');
                        const lastEntry = entries[entries.length - 1];
                        lastEntry.querySelector('.stone-type').value = type;
                        lastEntry.querySelector('.stone-weight').value = weight;
                    }
                });
            }
            
            calculatePrice();
            updateStonePreview();
            switchTab('create');
        }

        function deleteItem(code) {
            if (!confirm('Delete?')) return;
            inventory = inventory.filter(i => i.itemCode !== code);
            localStorage.setItem('idcTagInventory', JSON.stringify(inventory));
            updateInventoryDisplay();
        }

        function addToQueue(code) {
            const item = inventory.find(i => i.itemCode === code);
            if (!item || printQueue.find(i => i.itemCode === code)) return;
            printQueue.push(item);
            updatePrintQueue();
            showNotification('Added to queue');
        }

        function updatePrintQueue() {
            const container = document.getElementById('printQueue');
            document.getElementById('queueCount').textContent = printQueue.length;
            
            if (printQueue.length === 0) {
                container.innerHTML = '<div class="text-center py-8 text-red-300 border-2 border-dashed border-red-700 rounded-xl">Queue empty</div>';
                return;
            }
            
            container.innerHTML = printQueue.map(item => `
                <div class="flex justify-between items-center bg-red-950/50 border border-red-700 rounded-lg p-3">
                    <div>
                        <p class="font-bold text-white text-sm">${item.itemCode}</p>
                        <p class="text-xs text-red-200">${item.metalType} ‚Ä¢ ${item.stones.join(', ')} ‚Ä¢ ${item.price}</p>
                    </div>
                    <button onclick="removeFromQueue('${item.itemCode}')" class="text-red-400"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg></button>
                </div>
            `).join('');
        }

        function removeFromQueue(code) {
            printQueue = printQueue.filter(i => i.itemCode !== code);
            updatePrintQueue();
        }

        function clearQueue() {
            printQueue = [];
            updatePrintQueue();
        }

        function printTag() {
            const data = {
                itemCode: document.getElementById('itemCode').value,
                serialCode: document.getElementById('serialCode').value,
                locationCode: document.getElementById('locationCode').value,
                metalType: document.getElementById('metalType').value,
                stones: getStones(),
                price: document.getElementById('finalPrice').value
            };
            
            document.getElementById('printContainer').innerHTML = generatePrintHTML(data);
            setTimeout(() => window.print(), 100);
        }

        function printBatch() {
            if (printQueue.length === 0) return;
            const container = document.getElementById('printContainer');
            container.innerHTML = printQueue.map(item => generatePrintHTML(item)).join('');
            setTimeout(() => {
                window.print();
                setTimeout(() => {
                    container.innerHTML = '';
                    clearQueue();
                    showNotification(`Printed ${printQueue.length} tags`);
                }, 1000);
            }, 500);
        }

        function generatePrintHTML(item) {
            const stonesHtml = item.stones.map(s => `<p style="font-size: 10pt; font-weight: 500; margin: 0; line-height: 1.4; color: black;">${s}</p>`).join('');
            
            return `
                <div style="width: 3.5in; height: 0.875in; display: flex; font-family: Arial, sans-serif; page-break-after: always; background: white;">
                    <!-- LEFT SIDE -->
                    <div style="width: 1.75in; height: 0.875in; border-right: 1px dashed #94a3b8; display: flex; align-items: center; gap: 0.1in; padding: 0.08in 0.12in; box-sizing: border-box;">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(item.itemCode + '-' + item.serialCode)}" 
                             style="width: 0.5in; height: 0.5in; flex-shrink: 0;" />
                        <div style="display: flex; flex-direction: column; gap: 0.02in;">
                            <p style="font-size: 14pt; font-weight: 700; margin: 0; line-height: 1.1; color: black;">${item.itemCode}</p>
                            <p style="font-size: 11pt; margin: 0; line-height: 1.2; color: black;">${item.serialCode}</p>
                            <p style="font-size: 9pt; margin: 0; line-height: 1.2; color: #64748b;">${item.locationCode}</p>
                        </div>
                    </div>
                    
                    <!-- RIGHT SIDE -->
                    <div style="width: 1.75in; height: 0.875in; display: flex; flex-direction: column; padding: 0.1in 0.12in; box-sizing: border-box;">
                        <p style="font-size: 16pt; font-weight: 700; margin: 0 0 0.05in 0; line-height: 1; color: black;">${item.metalType}</p>
                        <div style="flex: 1;">${stonesHtml}</div>
                        <p style="font-size: 13pt; font-weight: 700; margin: auto 0 0 0; line-height: 1; color: black;">${item.price}</p>
                    </div>
                </div>
            `;
        }

        function resetForm() {
            document.getElementById('cost').value = '';
            document.getElementById('multiplier').value = '15';
            document.getElementById('metalType').value = '14K';
            document.getElementById('productType').value = 'Ring';
            
            document.getElementById('stoneContainer').innerHTML = `
                <div class="stone-entry">
                    <select class="stone-type bg-red-950/80 border border-red-600 rounded-lg px-3 py-2 text-sm text-white custom-select input-glow w-32">
                        <option value="DIA">DIA</option>
                        <option value="W-DIA">W-DIA</option>
                        <option value="B-DIA">B-DIA</option>
                        <option value="P-DIA">P-DIA</option>
                        <option value="Y-DIA">Y-DIA</option>
                        <option value="TAZ">TAZ</option>
                        <option value="SAP">SAP</option>
                        <option value="EM">EM</option>
                        <option value="RUBY">RUBY</option>
                        <option value="TOP">TOP</option>
                        <option value="LARI">LARI</option>
                        <option value="PERL">PERL</option>
                        <option value="OPAL">OPAL</option>
                        <option value="GAR">GAR</option>
                        <option value="AM">AM</option>
                        <option value="CIT">CIT</option>
                        <option value="AQ">AQ</option>
                        <option value="MOON">MOON</option>
                            <option value="ONYX">ONYX</option>
                        <option value="JADE">JADE</option>
                    </select>
                    <input type="text" class="stone-weight bg-red-950/80 border border-red-600 rounded-lg px-3 py-2 text-sm text-white input-glow flex-1" placeholder="1.53ct">
                    <button onclick="removeStone(this)" class="text-red-400 hover:text-red-300 px-2">√ó</button>
                </div>
            `;
            
            document.querySelector('.stone-type').addEventListener('change', updateStonePreview);
            document.querySelector('.stone-weight').addEventListener('input', updateStonePreview);
            
            generateCodes();
            calculatePrice();
        }

        function updateInventoryCount() {
            document.getElementById('inventoryCount').textContent = inventory.length;
        }

        function showNotification(msg) {
            const div = document.createElement('div');
            div.className = 'fixed bottom-4 right-4 px-4 py-2 bg-yellow-600 text-white rounded-lg shadow-lg z-50 text-sm';
            div.textContent = msg;
            document.body.appendChild(div);
            setTimeout(() => div.remove(), 2000);
        }
        
        document.querySelector('.stone-type').addEventListener('change', updateStonePreview);
        document.querySelector('.stone-weight').addEventListener('input', updateStonePreview);
    </script>
</body>
</html>
